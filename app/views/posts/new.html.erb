<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-12">
      <div class="jumbotron">
        <h1 align="left">New Post</h1>
      </div>
      <%= form_with scope: :post, url: posts_path,:html => {:class => "form-horizontal align-center"},  local: true do |form| %>

        <div class="form-group">
          <%= form.label :title, "Title:", class: "col-md-4 control-label" %>
            <div class="col-md-8">
              <%= form.text_field :title, class: "form-control" %>
            </div>
        </div>

        <div class="form-group">
          <%= form.label :text, "Text:", class: "col-md-4 control-label" %>
            <div class="col-md-8">
              <%= form.text_area :text, class: "form-control" %>
            </div>
        </div>


        <div class="form-group">
          <div class="col-md-8">
            <%= form.submit "Submit", class: "btn btn-block btn-primary" %>
          </div>
        </div>

        <% end %>
    </div>
  </div>
</div>